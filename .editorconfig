# =============================================================================
# .editorconfig - derived from VS Code settings.json
# =============================================================================
# Keeps indentation, whitespace, and formatting rules consistent across editors.
# EditorConfig is respected by VS Code, JetBrains, Sublime, etc.
# =============================================================================

# Top-level indicator: this is the project root configuration.
root = true

# -----------------------------------------------------------------------------
# === Global defaults ===
# -----------------------------------------------------------------------------
[*]
charset = utf-8                    # File encoding
end_of_line = lf                   # Normalize to LF endings
insert_final_newline = true        # Always end files with newline
trim_trailing_whitespace = true    # Remove trailing spaces on save
indent_style = space               # Default indentation uses spaces
indent_size = 4                    # Global indent size matches VS Code tabSize
tab_width = 4                      # Width of visual tab stops
max_line_length = 80               # Matches wrap column for rewrap (80 cols)

# -----------------------------------------------------------------------------
# === JavaScript and JSON (Prettier) ===
# -----------------------------------------------------------------------------
[*.{js,jsx,json,jsonc}]
end_of_line = lf
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
# Formatter handled by VS Code extension "esbenp.prettier-vscode"

# -----------------------------------------------------------------------------
# === Makefiles ===
# -----------------------------------------------------------------------------
[Makefile]
indent_style = tab                 # Make syntax requires literal tabs
tab_width = 4                      # Use visible wide tab width
trim_trailing_whitespace = true
# Display all whitespace characters; handled by VS Code editor.renderWhitespace

# -----------------------------------------------------------------------------
# === Markdown ===
# -----------------------------------------------------------------------------
[*.md]
end_of_line = lf
trim_trailing_whitespace = false   # Preserve intentional trailing spaces for line breaks
# Formatter: yzhang.markdown-all-in-one
# Quick suggestions enabled for comments/strings; keep UTF-8 only visible ASCII

# -----------------------------------------------------------------------------
# === Python ===
# -----------------------------------------------------------------------------
[*.py]
trim_trailing_whitespace = true
max_line_length = 101
# Formatter: charliermarsh.ruff
# On save: fixAll.ruff + organizeImports.ruff
# rewrap.autoWrap disabled (handled by Ruff formatting)

# -----------------------------------------------------------------------------
# === TOML ===
# -----------------------------------------------------------------------------
[*.toml]
trim_trailing_whitespace = true
# Formatter: tamasfe.even-better-toml
# Format on save enabled; array and key alignment per Taplo settings

# -----------------------------------------------------------------------------
# === TypeScript ===
# -----------------------------------------------------------------------------
[*.ts]
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true
# Formatter: vscode.typescript-language-features

# -----------------------------------------------------------------------------
# === Shell Scripts ===
# -----------------------------------------------------------------------------
[*.sh]
end_of_line = lf
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

# -----------------------------------------------------------------------------
# === Miscellaneous text and Markdown-like files ===
# -----------------------------------------------------------------------------
[*.{txt,mdx,markdown}]
trim_trailing_whitespace = false

# -----------------------------------------------------------------------------
# === Overrides for project conventions ===
# -----------------------------------------------------------------------------
[*.{yml,yaml}]
indent_size = 2                    # YAML best practice
tab_width = 2

[*.{ini,editorconfig}]

# =============================================================================
# End of file
# =============================================================================
