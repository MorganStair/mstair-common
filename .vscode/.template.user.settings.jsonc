        "(?:[A-Za-z]:)?[\\\\/](?:[A-Za-z0-9_.-]+[\\\\/])*[A-Za-z0-9_.-]+",
        // IPv4 addresses
        "\\b\\d{1,3}(?:\\.\\d{1,3}){3}\\b",
