# File: .gitattributes
# ---------------------------------------------------------------------------
# Default: Normalize all text files to LF in repo.
# Git converts to CRLF on checkout only if user's core.autocrlf=true.
# ---------------------------------------------------------------------------

* text=auto eol=lf

# ---------------------------------------------------------------------------
# Windows-only script types (force CRLF)
# ---------------------------------------------------------------------------
*.bat  text eol=crlf
*.cmd  text eol=crlf
*.ps1  text eol=crlf

# ---------------------------------------------------------------------------
# Cross-platform text/code (force LF)
# ---------------------------------------------------------------------------
*.py   text eol=lf
*.sh   text eol=lf
*.mk   text eol=lf
*.mak  text eol=lf
*.md   text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml  text eol=lf
*.json text eol=lf
*.ini  text eol=lf
*.cfg  text eol=lf
*.html text eol=lf
*.css  text eol=lf
*.ts   text eol=lf
*.js   text eol=lf

# Force LF for all files in the scripts directory, regardless of extension
scripts/* text eol=lf

# ---------------------------------------------------------------------------
# Binary files (no EOL normalization)
# ---------------------------------------------------------------------------
*.bin  binary
*.dll  binary
*.exe  binary
*.gif  binary
*.gz   binary
*.ico  binary
*.jpeg binary
*.jpg  binary
*.pdf  binary
*.png  binary
*.so   binary
*.stl  binary
*.zip  binary

# ---------------------------------------------------------------------------
# Build / virtual environment / cache directories (no normalization)
# ---------------------------------------------------------------------------
dist/**          -text
node_modules/**  -text
out/**           -text
.cache/**        -text
.venv/**         -text

# End of file: .gitattributes
